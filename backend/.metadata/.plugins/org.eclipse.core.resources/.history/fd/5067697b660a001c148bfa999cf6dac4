package com.maria.api.repository;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.stereotype.Repository;

import com.maria.api.model.Relation;

/**
 * @author Maria
 *
 */
@Repository
public interface IRelationRepository extends JpaRepository<Relation, Long> {

	@Query("SELECT re FROM RELATION re WHERE DESTINATION_CURRENCY = destinationCurrency AND ORIGIN_CURRENCY = originCurrency" )
	Relation getRelationByCurrency(Relation relation);
}
